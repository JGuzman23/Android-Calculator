<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_nombre"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="66dp" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="356dp"
        android:layout_height="287dp"
        android:layout_marginTop="216dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <Button
            android:id="@+id/button_dollar"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:onClick="dollar"
            android:text="$" />

        <Button
            android:id="@+id/button_euro"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/button_dollar"
            android:onClick="euro"
            android:text="â‚¬" />

        <Button
            android:id="@+id/button_yen"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/button_euro"
            android:onClick="yen"
            android:text="YEN" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/button_yen"
            android:onClick="Limpiar"
            android:text="C" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_dollar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:onClick="SetUno"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_euro"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/button_1"
            android:onClick="SetDos"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_yen"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/button_2"
            android:onClick="SetTres"
            android:text="3" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_clear"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/button_3"
            android:onClick="dividir"
            android:text="/" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:onClick="SetCuatro"
            android:text="4" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:onClick="Setsiete"
            android:text="7" />

        <Button
            android:id="@+id/button_dop"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:onClick="peso"
            android:text="DOP" />

        <Button
            android:id="@+id/button_5"

            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/button_4"
            android:onClick="SetCinco"
            android:text="5" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_5"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/button_7"
            android:onClick="SetOcho"
            android:text="8" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_8"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/button_dop"
            android:onClick="SetCero"
            android:text="0" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_3"
            android:layout_marginStart="7dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/button_5"
            android:onClick="SetSeix"
            android:text="6" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_6"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/button_8"
            android:onClick="SetNueve"
            android:text="9" />

        <Button
            android:id="@+id/button_igual"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_9"
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/button_0"
            android:onClick="igual"
            android:text="=" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_div"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/button_6"
            android:onClick="multiplicar"
            android:text="*" />

        <Button
            android:id="@+id/button_menos"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_mul"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/button_9"
            android:onClick="restar"
            android:text="-" />

        <Button
            android:id="@+id/button_mas"
            android:layout_width="81dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_menos"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/button_igual"
            android:onClick="sumar"
            android:text="+" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_Resultado"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/rl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.781"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/moneda"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/txt_Resultado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>